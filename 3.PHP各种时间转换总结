1.当月开始数第XX天
echo date('Y-m-d 00:00:00.000',strtotime("+" . XX - 1 . " day", strtotime(date('Y-m-01 00:00:00.000', strtotime(date("Y-m-d"))))));
2.上YY个月开始数第XX天
echo date('Y-m-d 00:00:00.000',strtotime("+" . XX - 1 . " day", strtotime(date("Y-m-01", strtotime("-YY month")))));
3.下YY个月开始数第XX天
echo date('Y-m-d 00:00:00.000',strtotime("+" . XX - 1 . " day", strtotime(date("Y-m-01", strtotime("+YY month")))));




